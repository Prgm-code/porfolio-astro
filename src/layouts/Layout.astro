---
import "@/styles/global.css";
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ParticleComponentAstro from "../components/ParticlesComponent.astro";
import Analytics from "@vercel/analytics/astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Analytics />
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="overflow-x-hidden">
    <div
      class="fixed top-0 left-0 z-[-2] h-screen w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
      <ParticleComponentAstro
        class="bg-transparent w-full h-full"
        id="particles"
      />
    </div>
    <div id="content" class="relative z-10 min-h-screen">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  /* Evitar overflow horizontal */
  * {
    box-sizing: border-box;
  }
  html,
  body {
    overflow-x: hidden;
    max-width: 100%;
    margin: 0;
    padding: 0;
  }

  /* Estilo para las part√≠culas */
  #particles {
    z-index: -1000 !important;
  }

  /* Contenido principal */
  #content {
    position: relative;
    z-index: 1;
    width: 100%;
    min-height: 100vh;
  }

  /* Color scheme y fuentes */
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Onest Variable";
    scroll-behavior: smooth;
  }
  body {
    background: #050505;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  /* Reducir el movimiento para quienes lo prefieren */
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  /* Ajustes para pantallas menores a 500px */
  @media (max-width: 500px) {
    .bg-custom-gradient {
      background-image: radial-gradient(
        ellipse 100% 200% at 50% 0%,
        rgba(120, 119, 198, 0.3),
        rgba(255, 255, 255, 0)
      );
    }
  }
</style>
