---
import { CERTIFICATIONS } from "../utils/data";
---

<div
  class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-4"
>
  {
    CERTIFICATIONS.map((cert) => (
      <div class="bg-gray-800/20 rounded-xl p-4 lg:p-5 border border-gray-700/20 hover:border-gray-600/40 transition-all duration-300 hover:shadow-md hover:shadow-gray-900/20">
        <div class="flex justify-between items-start mb-3">
          <h4 class="text-sm lg:text-base font-semibold text-purple-300 leading-tight flex-1 pr-3">
            {cert.title}
          </h4>
          <span class="bg-blue-600/20 text-blue-300 px-3 py-1 rounded-full text-xs font-medium whitespace-nowrap">
            {cert.year}
          </span>
        </div>
        <p class="text-gray-400 text-xs lg:text-sm">{cert.issuer}</p>
      </div>
    ))
  }
</div>
