---
import { EDUCATION } from "../utils/data.ts";
---

<div class="space-y-6 lg:space-y-8">
  {
    EDUCATION.map((item) => (
      <div class="bg-gray-800/30 rounded-xl p-6 lg:p-8 border border-gray-700/30 hover:border-gray-600/40 transition-all duration-300">
        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-6">
          <div class="flex-1">
            <h3 class="text-xl lg:text-2xl font-semibold text-yellow-200 mb-3">
              {item.title}
            </h3>
            <p class="text-blue-300 font-medium text-lg mb-2">
              {item.institution}
            </p>
            {item.location && <p class="text-gray-400 mb-3">{item.location}</p>}
            {item.description && (
              <p class="text-gray-300 leading-relaxed">{item.description}</p>
            )}
          </div>
          <div class="mt-4 lg:mt-0 lg:ml-8 flex-shrink-0">
            <span class="bg-blue-600/20 text-blue-300 px-4 py-2 rounded-full text-sm font-medium">
              {item.year}
            </span>
          </div>
        </div>
        {item.achievements && item.achievements.length > 0 && (
          <div class="mt-6 pt-4 border-t border-gray-700/30">
            <h4 class="text-sm font-semibold text-gray-300 mb-3">
              Logros destacados:
            </h4>
            <ul class="space-y-2">
              {item.achievements.map((achievement) => (
                <li class="text-gray-400 flex items-start">
                  <span class="text-yellow-400 mr-2 mt-1">â€¢</span>
                  <span>{achievement}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
    ))
  }
</div>
