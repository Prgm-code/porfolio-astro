---
import { PROJECTS } from "../utils/data.ts";
import LinkIcon from "../icons/Link.astro";
---

{
  PROJECTS.map(({ title, description, tags, image, link }) => (
    <article class="mx-4 my-10">
      <div class="flex items-center align-middle flex-wrap text-pretty">
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        {link && (
          <a
            class="transition
  hover:scale-125"
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            title="Link to project"
          >
            <LinkIcon class=" text-yellow-200 mx-2 size-8 pb-1" />
          </a>
        )}
      </div>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-4 flex-row mb-4">
        {tags.map((tag) => (
          <li>
            <span
              class=" flex items-center justify-center gap-x-2 rounded-full text-xs text-pretty py-1 px-2 bg-blue-200/20 transition
  hover:scale-110 "
            >
              <tag.icon class={`${tag.class} align-middle`} />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
